# Environment Variables Template
# Copy this file to .env and fill in your values

# ===================================
# Application Settings
# ===================================
ENVIRONMENT=development
DEBUG=true

# ===================================
# Security
# ===================================
SECRET_KEY=your_super_secret_key_here_change_this_in_production_min_32_chars

# ===================================
# Database
# ===================================
# For local development (SQLite)
DATABASE_URL=sqlite:///./sql_app.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/aurastyle

# Docker Compose PostgreSQL
DB_PASSWORD=changeme123

# ===================================
# Redis Cache
# ===================================
# Leave empty to disable caching
REDIS_URL=

# For local Redis
# REDIS_URL=redis://localhost:6379/0

# For Docker Compose
# REDIS_URL=redis://redis:6379/0

# ===================================
# CORS Origins (Production)
# ===================================
# Comma-separated list
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# External APIs (Optional)
# ===================================
# Unsplash API for product images
UNSPLASH_ACCESS_KEY=

# Fake Store API (no key needed)
# Used for seeding realistic product data

# ===================================
# Monitoring & Analytics (Optional)
# ===================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ===================================
# Email (Optional - for password reset)
# ===================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@aurastyle.com

# ===================================
# ML Model Settings
# ===================================
MODEL_REBUILD_INTERVAL_HOURS=24
MIN_INTERACTIONS_FOR_COLLECTIVE=10

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===================================
# Deployment (Production)
# ===================================
# Vercel (Frontend)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Render/Railway (Backend)
PORT=8000
